<%- include ("partials/header") %>
<div
  class="flex flex-col justify-center items-center text-center text-gray-800 md:text-left container"
>
  <h1 class="font-bold text-5xl">Quran API</h1>
  <p class="text-gray-600">An API for getting the quran</p>

  <div
    class="flex flex-wrap justify-center md:justify-start bg-gray-100 mt-10 p-10 divide-y w-full text-center md:text-left surahs"
  >
    <% surahs.forEach((surah) => { %>
    <a href="/surah/<%= surah.number %>">
      <div class="bg-white hover:bg-gray-200 m-4 p-4 rounded w-80">
        <h1 class="font-bold text-3xl"><%= surah.englishName %></h1>
        <p class="text-gray-600"><%= surah.englishNameTranslation %></p>
        <p class="text-gray-600">Ayahs: <%= surah.numberOfAyahs %></p>
        <p class="text-gray-600">Revelation: <%= surah.revelationType %></p>
        <p class="text-gray-600">Surah Number: <%= surah.number %></p>
        <p class="text-gray-600">Total Verses: <%= surah.numberOfAyahs %></p>
        <p class="text-gray-600">Total Surahs: <%= surah.numberOfAyahs %></p>
        <p class="text-gray-600">Pages: <%= surah.numberOfAyahs %></p>

        

      </div>
    </a>
    <% }) %>
  </div>
</div>

<%- include ("partials/footer") %>

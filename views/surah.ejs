<%- include ("partials/header") %>
<div class="flex flex-col justify-center items-center h-fit">
  <%- include ("partials/audio.ejs") %>
</div>
<div
  class="flex flex-col justify-center items-center bg-slate-950 mt-64 p-5 border-b-2 w-full h-fit surah-container text-center text-gray-800"
>
  <h1 class="mb-2 border-b-2 font-bold text-5xl"><%= surah.number %>.</h1>

  <h2 class="font-bold text-3xl">
    <%= surah.englishName %> <%= surah.name %>
    <br />
    (<%= surah.englishNameTranslation%>)
  </h2>
  <p class="text-gray-300">
    <%= surah.revelationType %> (Numbers of Ayahs: <%= surah.numberOfAyahs %>)
  </p>
  <p class="text-gray-300">Juz no. <%= surah.ayahs[0].juz %></p>
</div>
<div
  class="flex flex-col justify-center items-center bg-slate-950 p-5 w-full h-fit text-center"
>
  <div
    class="flex flex-col justify-center items-center bg-zinc-950 w-3/6 h-fit"
  >
    <div
      class="flex flex-col py-2 p-2 border-t-2 divide-y w-full h-full font-bold text-2xl leading-relaxed"
    >
      <% audio.surah.forEach((verse) => { %>
      <p class="text-right mt-4 mb-4 font-bold text-3xl text-slate-300">
        <%= verse.verse %>. <%= verse.arabic %>
      </p>
      <p class="mt-4 mb-4 text-left text-slate-300 text-xl">
        <%= verse.english %>
      </p>
      <br />
      <% }); %>
    </div>
  </div>
</div>

<%- include ("partials/footer") %>

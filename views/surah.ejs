<%- include ("partials/header") %>
<div class="flex flex-col justify-center items-center h-fit">
  <%- include ("partials/audio.ejs") %>
</div>
<div
  class="flex flex-col justify-center items-center bg-gray-100 p-5 w-full h-fit surah-container text-center text-gray-800"
>
  <h1 class="mb-2 border-b-2 font-bold text-5xl"><%= surah.number %>.</h1>

  <h2 class="font-bold text-3xl">
    <%= surah.englishName %> <%= surah.name %>
    <br />
    (<%= surah.englishNameTranslation%>)
  </h2>
  <p class="text-gray-600">
    <%= surah.revelationType %> (Numbers of Ayahs: <%= surah.numberOfAyahs %>)
  </p>
  <p class="text-gray-600">Juz no. <%= surah.ayahs[0].juz %></p>
</div>

<div class="flex flex-col justify-center items-center bg-black mt-10 h-fit">
  <div
    class="flex flex-col py-2 border-t-2 divide-y w-1/2 h-full font-bold text-2xl leading-relaxed"
  >
    <% audio.surah.forEach((verse) => { %>
    <p class="text-right"><%= verse.verse %>. <%= verse.arabic %><br /></p>
    <p><%= verse.english %></p>
    <br />
    <% }); %>
  </div>
</div>

<%- include ("partials/footer") %>
